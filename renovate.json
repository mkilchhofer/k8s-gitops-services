{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "helm-values": {
    "fileMatch": [
      "k3s-bootstrap/helm-values/.+\\.yaml$",
      "apps\\/.*values\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": ["\\.yaml$"],
    "ignorePaths": [
      ".github"
    ]
  },
  "packageRules": [
    {
      "matchFileNames": ["**/Chart.yaml"],
      "commitMessageTopic": "{{depName}}"
    },
    {
      "matchDepTypes": ["helm_release"],
      "matchFileNames": ["**/*.tf"],
      "commitMessageTopic": "{{depName}}"
    },
    {
      "matchPackageNames": ["ghcr.io/falcosecurity/charts/falco"],
      "sourceUrl": "https://github.com/falcosecurity/charts"
    },
    {
      "matchPackageNames": ["ghcr.io/grafana/helm-charts/grafana"],
      "changelogUrl": "https://github.com/grafana/helm-charts"
    }
  ]
}
