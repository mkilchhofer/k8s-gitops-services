{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "helm-values": {
    "fileMatch": [
      "k3s-bootstrap/helm-values/.+\\.yaml$",
      "apps\\/.*values\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": ["\\.yaml$"],
    "ignorePaths": [
      ".github"
    ]
  },
  "packageRules": [
    {
      "matchFileNames": ["**/Chart.yaml"],
      "commitMessageTopic": "{{depName}}"
    },
    {
      "matchDepTypes": ["helm_release"],
      "matchFileNames": ["**/*.tf"],
      "commitMessageTopic": "{{depName}}"
    },
    {
      "matchPackageNames": ["ghcr.io/falcosecurity/charts/falco"],
      "sourceUrl": "https://github.com/falcosecurity/charts"
    },
    {
      "matchPackageNames": ["ghcr.io/grafana/helm-charts/grafana"],
      "sourceUrl": "https://github.com/grafana/helm-charts"
    },
    {
      "matchPackageNames": ["ghcr.io/prometheus-community/charts/*"],
      "sourceUrl": "https://github.com/prometheus-community/helm-charts"
    },
    {
      "matchPackageNames": ["ghcr.io/oauth2-proxy/charts/oauth2-proxy"],
      "sourceUrl": "https://github.com/oauth2-proxy/manifests"
    },
    {
      "matchPackageNames": ["ghcr.io/kubereboot/charts/kured"],
      "sourceUrl": "https://github.com/kubereboot/charts"
    },
    {
      "description": "Jellyfin container image is built from a packaging repo, override the source to the main repo.",
      "matchPackageNames": ["ghcr.io/jellyfin/jellyfin"],
      "sourceUrl": "https://github.com/jellyfin/jellyfin"
    },
    {
      "matchPackageNames": ["hashicorp/tfc-agent"],
      "changelogUrl": "https://developer.hashicorp.com/terraform/cloud-docs/agents/changelog"
    }
  ]
}
